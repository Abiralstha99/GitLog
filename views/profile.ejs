<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile • My Book Log</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body class="bg-gray-50 text-gray-900 antialiased">
    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
      <% if (flash && flash.success && flash.success.length) { %>
        <div class="mb-4 rounded bg-green-100 border border-green-300 px-4 py-2 text-green-800" role="status">
          <%= flash.success[0] %>
        </div>
      <% } %>
      <% if (flash && flash.error && flash.error.length) { %>
        <div class="mb-4 rounded bg-red-100 border border-red-300 px-4 py-2 text-red-800" role="alert">
          <%= flash.error[0] %>
        </div>
      <% } %>

      <header class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold tracking-tight">@<%= (user && user.username) || 'User' %></h1>
          <p class="mt-1 text-gray-600"><span class="font-medium"><%= books?.length || 0 %></span> book(s) in your log</p>
        </div>
        <div class="flex items-center gap-3">
          <a href="/" class="inline-flex items-center rounded-lg bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-gray-200 hover:bg-gray-50">Home</a>
          <form action="/logout" method="POST">
            <button type="submit" class="inline-flex items-center rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600 transition">Log out</button>
          </form>
        </div>
      </header>

      <section class="mt-8">
        <% if (!books || books.length === 0) { %>
          <p class="text-gray-600">You haven't added any books yet.</p>
        <% } else { %>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 items-stretch gap-6">
            <% books.forEach(book => { %>
              <article class="group relative bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition overflow-hidden flex flex-col">
                <div class="relative h-48 sm:h-56 bg-gray-100">
                  <% if (book.cover_url) { %>
                    <img src="<%= book.cover_url %>" alt="Cover of <%= book.title || 'Untitled' %>" class="absolute inset-0 h-full w-full object-cover" loading="lazy" />
                  <% } else if (book.coverUrl) { %>
                    <img src="<%= book.coverUrl %>" alt="Cover of <%= book.title || 'Untitled' %>" class="absolute inset-0 h-full w-full object-cover" loading="lazy" />
                  <% } else if (book.cover_id) { %>
                    <img src="https://covers.openlibrary.org/b/id/<%= book.cover_id %>-L.jpg" alt="Cover of <%= book.title || 'Untitled' %>" class="absolute inset-0 h-full w-full object-cover" loading="lazy" />
                  <% } else { %>
                    <div class="absolute inset-0 grid place-items-center text-gray-400">
                      <span class="text-sm">No Cover</span>
                    </div>
                  <% } %>
                </div>
                <div class="flex-1 p-5 flex flex-col">
                  <h2 class="text-lg font-semibold leading-snug" title="<%= book.title %>"><%= book.title || 'Untitled' %></h2>
                  <p class="mt-1 text-sm text-gray-600">by <span class="font-medium"><%= book.author || 'Unknown' %></span></p>
                  <% if (book.notes) { %>
                    <p class="mt-3 text-sm text-gray-800 break-words line-clamp-3"><%= String(book.notes) %></p>
                  <% } %>
                  <div class="mt-auto flex items-center justify-between text-sm text-gray-700">
                    <div aria-label="Rating: <%= +book.rating || 0 %> out of 5">
                      <% const r = Math.max(0, Math.min(5, +book.rating || 0)); %>
                      <span class="align-middle text-yellow-500">★</span> <span><%= r || 0 %>/5</span>
                    </div>
                  </div>
                </div>
              </article>
            <% }) %>
          </div>
        <% } %>
      </section>
    </main>

    <script>
      setTimeout(() => {
        const success = document.querySelector('[role="status"]');
        const error = document.querySelector('[role="alert"]');
        [success, error].forEach(el => {
          if (!el) return;
          el.classList.add('transition-opacity', 'duration-700');
          el.style.opacity = '0';
          setTimeout(() => { el.style.display = 'none'; }, 700);
        });
      }, 5000);
    </script>
  </body>
</html>

