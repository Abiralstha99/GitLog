<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Book Log</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body class="bg-gray-50 text-gray-900 antialiased">
    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <h1 class="text-3xl font-bold tracking-tight">Book Notes</h1>
        <div class="w-full sm:w-auto flex items-center gap-3">
          <div class="relative flex-1 sm:min-w-[320px]">
            <label for="search" class="sr-only">Search books</label>
            <input
              id="search"
              type="text"
              placeholder="Search by title or author..."
              class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
              oninput="searchBook(event)"
            />
          </div>
          <a href="/new" class="inline-flex items-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition">
            Add New Book
          </a>
        </div>
      </div>

      <div class="mt-8">
        <!-- If there are no books in the array, show a simple message -->
        <% if (books.length === 0) { %>
          <p class="text-gray-600">No books to display</p>
        <% } else { %>
          <!-- Responsive grid of book cards -->
          <div id="booksGrid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <!-- Loop through each book -->
            <% books.forEach(book => { %>
              <article
                class="group bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md focus-within:shadow-md transition overflow-hidden h-full flex flex-col"
                data-title="<%= (book.title || '').toLowerCase() %>"
                data-author="<%= ((book.author || book.authors || 'unknown').toString()).toLowerCase() %>"
                role="article"
                aria-label="Book card: <%= book.title || 'Untitled' %>"
              >
                <div class="flex gap-4 p-4">
                  <!-- Book cover: prefer coverUrl, then Open Library cover_id, else placeholder -->
                  <% if (book.coverUrl) { %>
                    <img
                      src="<%= book.coverUrl %>"
                      alt="Cover of <%= book.title || 'Untitled' %>"
                      class="h-28 w-20 sm:h-32 sm:w-24 object-cover rounded-md flex-none bg-gray-100"
                      loading="lazy"
                    />
                  <% } else if (book.cover_id) { %>
                    <img
                      src="https://covers.openlibrary.org/b/id/<%= book.cover_id %>-M.jpg"
                      alt="Cover of <%= book.title || 'Untitled' %>"
                      class="h-28 w-20 sm:h-32 sm:w-24 object-cover rounded-md flex-none bg-gray-100"
                      loading="lazy"
                    />
                  <% } else { %>
                    <div class="h-28 w-20 sm:h-32 sm:w-24 rounded-md flex-none bg-gray-200 grid place-items-center text-gray-500 text-xs">
                      No Cover
                    </div>
                  <% } %>

                  <!-- Book information -->
                  <div class="min-w-0 flex-1 flex flex-col">
                    <h2 class="text-lg font-semibold leading-snug truncate" title="<%= book.title %>"><%= book.title || 'Untitled' %></h2
                    <p class="mt-1 text-sm text-gray-600">
                      <span class="font-medium">Author:</span>
                      <%= book.author || 'Unknown' %>
                    </p>

                    <!-- Star rating (1–5) -->
                    <div class="mt-1 text-sm" aria-label="Rating: <%= +book.rating || 0 %> out of 5">
                      <% const r = Math.max(0, Math.min(5, +book.rating || 0)); %>
                      <% for (let i = 1; i <= 5; i++) { %>
                        <span class="<%= i <= r ? 'text-yellow-500' : 'text-gray-300' %>">★</span>
                      <% } %>
                      <% if (r) { %>
                        <span class="ml-1 text-gray-600 align-middle text-xs">(<%= r %>/5)</span>
                      <% } %>
                    </div>

                    <!-- Notes/description (truncate long text) -->
                    <% if (book.notes) { %>
                      <% const note = String(book.notes); const short = note.length > 50 ? note.slice(0, 50) + '...' : note; %>
                      <p class="mt-2 text-sm text-gray-700 break-words"><%= short %></p>
                    <% } %>

                    <!-- Actions -->
                    <div class="mt-auto flex flex-wrap items-center gap-2">
                      <a href="/edit/<%= book.id %>" class="inline-flex items-center rounded-md bg-white px-3 py-1.5 text-xs font-semibold text-gray-900 border border-gray-300 shadow-sm hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition" aria-label="Edit <%= book.title || 'this book' %>" title="Edit">
                        Edit
                      </a>
                      <form
                        action="/delete/<%= book.id %>"
                        method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this book?');"
                        class="inline"
                        aria-label="Delete <%= book.title || 'this book' %>"
                      >
                        <button type="submit" class="inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-xs font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600 transition" title="Delete">
                          Delete
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </article>
            <% }) %>
          </div>
        <% } %>
      </div>
    </main>

    <script>

function searchBook(e){
  const value = e.target.value.toLowerCase().trim()
  const cards = document.querySelectorAll('#booksGrid article');
  cards.forEach(card => {
    const title = card.getAttribute('data-title') || '';
    const author = card.getAttribute('data-author') || '';
    const isVisible = title.toLowerCase().includes(value) || author.toLowerCase().includes(value);
    card.classList.toggle('hidden', !isVisible);
  })

}
    </script>
  </body>
</html>
